<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"

        tools:context=".Transactions">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:background="#C7C7C7">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

            <GridLayout
                    android:id="@+id/mainGrid"
                    android:rowCount="2"
                    android:columnCount="2"
                    android:alignmentMode="alignMargins"
                    android:layout_weight="8"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:padding="1dp">
                <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card14"
                        android:layout_columnWeight="1"
                        app:cardElevation="2dp"
                        app:cardCornerRadius="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnSpan="1"
                        android:layout_rowSpan="1"
                        android:layout_margin="8dp" android:checkable="true" android:clickable="true"
                        android:focusableInTouchMode="false" app:cardBackgroundColor="#DA6EEE">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                        <!-- Media -->
                        <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="140dp"
                                app:srcCompat="@drawable/icons8bitcoinaccepted96"
                                android:scaleType="centerCrop"
                                android:contentDescription="@string/content_description_media"
                        />

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="16dp">

                            <!-- Title, secondary and supporting text -->
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Withdraw Cash"
                                    android:textStyle="bold"
                                    android:layout_gravity="center_horizontal" android:gravity="center"
                                    android:textSize="18sp" android:textColor="#000000"/>
                        </LinearLayout>

                        <!-- Buttons -->
                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:orientation="horizontal">

                        </LinearLayout>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card15"
                        android:layout_width="wrap_content"
                        android:layout_columnWeight="1"
                        app:cardElevation="2dp"
                        app:cardCornerRadius="8dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp" android:layout_columnSpan="1"
                        android:layout_rowSpan="1" android:checkable="false" android:clickable="true"
                        android:focusableInTouchMode="false" app:cardBackgroundColor="#DA6EEE">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                        <!-- Media -->
                        <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="140dp"
                                app:srcCompat="@drawable/loan"
                                android:scaleType="centerCrop"
                                android:contentDescription="@string/content_description_media"
                        />

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="16dp" android:layout_gravity="center" android:gravity="center">

                            <!-- Title, secondary and supporting text -->
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Inter Account"
                                    android:textStyle="bold"
                                    android:textSize="18sp" android:textColor="#000000"/>


                        </LinearLayout>

                        <!-- Buttons -->
                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:orientation="horizontal">

                        </LinearLayout>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card16"
                        android:layout_columnWeight="1"
                        app:cardElevation="2dp"
                        app:cardCornerRadius="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnSpan="1"
                        android:layout_rowSpan="1"
                        android:layout_margin="8dp" android:focusableInTouchMode="false" android:clickable="true"
                        app:cardBackgroundColor="#DA6EEE">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                        <!-- Media -->
                        <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="140dp"
                                app:srcCompat="@drawable/icons8ledger96"
                                android:scaleType="centerCrop"
                                android:contentDescription="@string/content_description_media"
                        />

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="16dp">

                            <!-- Title, secondary and supporting text -->
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Deposit"
                                    android:textStyle="bold"
                                    android:layout_gravity="center_horizontal" android:gravity="center"
                                    android:textSize="18sp" android:textColor="#000000"/>
                        </LinearLayout>

                        <!-- Buttons -->
                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:orientation="horizontal">

                        </LinearLayout>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cards17"
                        android:layout_width="wrap_content"
                        android:layout_columnWeight="1"
                        app:cardElevation="2dp"
                        app:cardCornerRadius="8dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp" android:layout_columnSpan="1"
                        android:layout_rowSpan="1" android:checkable="false" android:clickable="true"
                        android:focusableInTouchMode="false" app:cardBackgroundColor="#DA6EEE">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                        <!-- Media -->
                        <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="140dp"
                                app:srcCompat="@drawable/rainy_day"
                                android:scaleType="centerCrop"
                                android:contentDescription="@string/content_description_media"
                        />

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="16dp" android:layout_gravity="center" android:gravity="center">

                            <!-- Title, secondary and supporting text -->
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Buy Airtime"
                                    android:textStyle="bold"
                                    android:textSize="18sp" android:textColor="#000000"/>


                        </LinearLayout>

                        <!-- Buttons -->
                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:orientation="horizontal">

                        </LinearLayout>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </GridLayout>

        </LinearLayout>
    </LinearLayout>
    <!-- TODO: Update blank fragment layout -->


</layout>