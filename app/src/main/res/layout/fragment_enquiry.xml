<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".Enquiry">
    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                       android:layout_height="match_parent"
                                                       android:background="#C7C7C7">
        <LinearLayout

                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.0"
                android:id="@+id/linearLayout">

            <GridLayout
                    android:id="@+id/mainGrid"
                    android:rowCount="2"
                    android:columnCount="2"
                    android:alignmentMode="alignMargins"
                    android:layout_weight="8"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:padding="1dp">
                <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card"
                        android:layout_columnWeight="1"
                        app:cardElevation="2dp"
                        app:cardCornerRadius="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnSpan="1"
                        android:layout_rowSpan="1"
                        android:layout_margin="8dp" android:checkable="true" android:clickable="true"
                        android:focusableInTouchMode="false" app:cardBackgroundColor="#8ECCFC">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                        <!-- Media -->
                        <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="140dp"
                                app:srcCompat="@drawable/finance_investment_management"
                                android:scaleType="centerCrop"
                                android:contentDescription="@string/content_description_media"
                        />

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="16dp">

                            <!-- Title, secondary and supporting text -->
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Balance Inquiry"
                                    android:textStyle="bold"
                                    android:layout_gravity="center_horizontal" android:gravity="center"
                                    android:textSize="18sp" android:textColor="#000000"/>
                        </LinearLayout>

                        <!-- Buttons -->
                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:orientation="horizontal">

                        </LinearLayout>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cards"
                        android:layout_width="wrap_content"
                        android:layout_columnWeight="1"
                        app:cardElevation="2dp"
                        app:cardCornerRadius="8dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp" android:layout_columnSpan="1"
                        android:layout_rowSpan="1" android:checkable="false" android:clickable="true"
                        android:focusableInTouchMode="false" app:cardBackgroundColor="#8ECCFC">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                        <!-- Media -->
                        <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="140dp"
                                app:srcCompat="@drawable/business_dollar"
                                android:scaleType="centerCrop"
                                android:contentDescription="@string/content_description_media"
                        />

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="16dp" android:layout_gravity="center" android:gravity="center">

                            <!-- Title, secondary and supporting text -->
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Mini  Statement"
                                    android:textStyle="bold"
                                    android:textSize="18sp" android:textColor="#000000"/>


                        </LinearLayout>

                        <!-- Buttons -->
                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:orientation="horizontal">

                        </LinearLayout>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card12"
                        android:layout_columnWeight="1"
                        app:cardElevation="2dp"
                        app:cardCornerRadius="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnSpan="1"
                        android:layout_rowSpan="1"
                        android:layout_margin="8dp" android:focusableInTouchMode="false" android:clickable="true"
                        app:cardBackgroundColor="#8ECCFC">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                        <!-- Media -->
                        <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="140dp"
                                app:srcCompat="@drawable/coruption_gravel_justice_law_money_venal256"
                                android:scaleType="centerCrop"
                                android:contentDescription="@string/content_description_media"
                        />

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="16dp">

                            <!-- Title, secondary and supporting text -->
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Loan  Balance"
                                    android:textStyle="bold"
                                    android:layout_gravity="center_horizontal" android:gravity="center"
                                    android:textSize="18sp" android:textColor="#000000"/>
                        </LinearLayout>

                        <!-- Buttons -->
                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:orientation="horizontal">

                        </LinearLayout>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cards13"
                        android:layout_width="wrap_content"
                        android:layout_columnWeight="1"
                        app:cardElevation="2dp"
                        app:cardCornerRadius="8dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp" android:layout_columnSpan="1"
                        android:layout_rowSpan="1" android:checkable="false" android:clickable="true"
                        android:focusableInTouchMode="false" app:cardBackgroundColor="#8ECCFC">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                        <!-- Media -->
                        <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="140dp"
                                app:srcCompat="@drawable/team_human_mind_thinking_brain_teamwork256"
                                android:scaleType="centerCrop"
                                android:contentDescription="@string/content_description_media"
                        />

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="16dp" android:layout_gravity="center" android:gravity="center">

                            <!-- Title, secondary and supporting text -->
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Mini  Statement"
                                    android:textStyle="bold"
                                    android:textSize="18sp" android:textColor="#000000"/>


                        </LinearLayout>

                        <!-- Buttons -->
                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:orientation="horizontal">

                        </LinearLayout>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </GridLayout>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"  app:layout_constraintBottom_toBottomOf="parent">

            <com.google.android.material.button.MaterialButton android:layout_width="wrap_content"
                                                               android:layout_height="wrap_content" android:text="My Account" android:id="@+id/button5"
                                                               android:background="@color/colorAccent" />
            <!--<Button-->
                    <!--android:text="My Account"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content" android:id="@+id/button5" -->
                    <!--android:background="#9EE058"/>-->
            <Button
                    android:text="Statements"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/button4" android:layout_weight="1"
                    android:background="#FFEB3B"/>
            <Button
                    android:text="Contact Us"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/button3" android:layout_weight="1"
                    android:background="#3B993D"/>
        </LinearLayout>
        <!--<include layout="@layout/horizontal_view"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--app:layout_constraintBottom_toBottomOf="@id/linearLayout"-->
        <!--android:visibility="visible" app:layout_constraintBottom_toTopOf="@id/linearLayout"/>-->
    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>